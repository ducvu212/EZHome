<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.minhd.ezhome.ui.base.fragment.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RegName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Vu Minh Duc"
            android:textColor="#ffffff"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/address96"
                android:tint="#dacdcd" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-25dp"
                android:background="@drawable/shape"
                android:backgroundTint="#dacdcd"
                android:hint="Địa chỉ nhà"
                android:paddingLeft="40dp"
                android:textColor="#ffffff"
                android:textColorHint="#dacdcd"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/phone96"
                android:tint="#dacdcd" />

            <EditText
                android:id="@+id/edt_phoneNumber"
                android:inputType="number"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-25dp"
                android:background="@drawable/shape"
                android:backgroundTint="#dacdcd"
                android:hint="Số điện thoại"
                android:paddingLeft="40dp"
                android:textColor="#ffffff"
                android:textColorHint="#dacdcd"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="270dp"
        android:gravity="center"
        android:text="Giá tiền"
        android:textColor="#dacdcd"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spiner_gia"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/shape"
        android:backgroundTint="#dacdcd"
        android:gravity="center_horizontal"
        android:textColor="#dacdcd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="315dp"
        android:gravity="center"
        android:text="Diện tích"
        android:textColor="#dacdcd"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spiner_dientich"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="313dp"
        android:background="@drawable/shape"
        android:backgroundTint="#dacdcd"
        android:gravity="center_horizontal"
        android:textColor="#dacdcd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="365dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/note96"
            android:tint="#dacdcd" />

        <EditText
            android:id="@+id/edt_note"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-25dp"
            android:background="@drawable/shape"
            android:backgroundTint="#dacdcd"
            android:hint="Ghi chú"
            android:paddingLeft="40dp"
            android:textColor="#ffffff"
            android:textColorHint="#dacdcd"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_RegHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="430dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Đăng Ký"
        android:textAllCaps="false"
        android:textColor="#dacdcd"
        android:textSize="18sp"
        android:textStyle="bold" />

</FrameLayout>
