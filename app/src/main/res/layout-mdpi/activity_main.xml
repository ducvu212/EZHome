<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.minhd.ezhome.ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/MainAct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnLoginFb"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:background="#3b5998"
            android:gravity="center"
            android:text="FaceBook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="257dp"
            android:src="@drawable/ic_login_fb" />

        <TextView
            android:id="@+id/btnLoginGG"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:background="#D44034"
            android:clickable="false"
            android:gravity="center"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="337dp"
            android:src="@drawable/ic_login_google_plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="410dp"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:text="Hoặc đăng nhập bằng tài khoản của bạn"
            android:textColor="#888BAC"
            android:typeface="normal" />


        <EditText
            android:id="@+id/edt_user"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="470dp"
            android:background="@drawable/shape"
            android:hint="      Địa chỉ email của bạn"
            android:paddingLeft="40dp"
            android:textColorHint="#888BAC"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="475dp"
            android:src="@drawable/ic_login_email" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="529dp"
            android:background="@drawable/shape"
            android:hint="       Mật khẩu của bạn"
            android:paddingLeft="40dp"
            android:textColorHint="#888BAC"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="535dp"
            android:src="@drawable/ic_login_pass" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="500dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="600dp"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Đăng nhập"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="730dp"
            android:text="Quên mật khẩu?"
            android:textSize="20sp"
            android:textColor="#888BAC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="810dp"
            android:gravity="center"
            android:text="Đăng ký"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold" />


    </FrameLayout>


</FrameLayout>
