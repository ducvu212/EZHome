<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/MainAct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnLoginFb"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:background="#3b5998"
            android:gravity="center"
            android:text="FaceBook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="135dp"
            android:src="@drawable/ic_login_fb" />

        <TextView
            android:id="@+id/btnLoginGG"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:background="#D44034"
            android:clickable="false"
            android:gravity="center"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="195dp"
            android:src="@drawable/ic_login_google_plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:text="Hoặc đăng nhập bằng tài khoản của bạn"
            android:textColor="#dacdcd"
            android:typeface="normal" />


        <EditText
            android:id="@+id/edt_user"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:background="@drawable/shape"
            android:hint="Địa chỉ email của bạn"
            android:paddingLeft="60dp"
            android:textColorHint="#888BAC"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="305dp"
            android:src="@drawable/ic_login_email" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="345dp"
            android:background="@drawable/shape"
            android:hint="Mật khẩu của bạn"
            android:paddingLeft="60dp"
            android:textColorHint="#888BAC"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="350dp"
            android:src="@drawable/ic_login_pass" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="400dp"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="460dp"
            android:text="Quên mật khẩu?"
            android:textColor="#888BAC" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"
            android:gravity="center"
            android:text="Đăng ký"
            android:textColor="#fff"
            android:textStyle="bold" />


    </FrameLayout>


</FrameLayout>
